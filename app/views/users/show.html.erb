<table class="profile" summary="Profile Information">
  <tr>
    <td class="main">
      <h1>
        <%= gravatar_for(@user) %>
        <%= @user.name %>
      </h1>
    </td>
    <td class="sidebar round">
      <b>Name</b> <%= @user.name %><br/>
      <b>URL</b> <%= link_to user_path(@user), @user %>
    </td>
  </tr>
</table>